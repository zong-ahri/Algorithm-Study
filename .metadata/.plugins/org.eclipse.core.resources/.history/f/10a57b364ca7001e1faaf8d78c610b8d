package No.step4;

import java.util.Scanner;

public class no1546 {

	public static void main(String[] args) {
		// 평균
		// 평균을 조작하는 문제

		// 최댓값 M
		// 모든 점수를 점수/M *100
		
		Scanner scanner = new Scanner(System.in);
		
		int size = scanner.nextInt();
		int[] scores = new int[size];
		int[] fixScores = new int[size];
		
		int maxValue = 0;
		double sum = 0;
		
		for (int i = 0; i < scores.length; i++) {
			scores[i] = scanner.nextInt();
		}
		
		for (int i = 0; i < scores.length; i++) {
			if (maxValue < scores[i])
				maxValue = scores[i];
		}
		
		for (int i = 0; i < scores.length; i++) {
			fixScores[i] = scores[i]/maxValue * 100;
		}
		
		for (int i = 0; i < scores.length; i++) {
			sum = sum + fixScores[i];
		}
		
		System.out.printf("%.2f", sum / fixScores.length);
	}

}
