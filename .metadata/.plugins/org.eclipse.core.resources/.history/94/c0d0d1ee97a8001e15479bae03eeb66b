package step6;

import java.util.*;

public class no2444 {

	public static void main(String[] args) {
		// 별 찍기 - 7
		
		Scanner scanner = new Scanner(System.in);
		
		int N = scanner.nextInt();
		
		for (int line = 0; line < 2*N - 1; line++) {
			if (line < N) {
				drawingSpace(line, N);
				drawingStars(line);
			} else {
				drawingSpace(line, line-N);
				drawingStars(2*N - 2 - line);
			}
			
			System.out.println();
		}

	}

	// 별 그리기
	private static void drawingStars(int stars) {
		for (int i = 0; i < 2*stars+1; i++) {
			System.out.print("*");
		}
	}
	
	// 공간 그리기
	private static void drawingSpace(int Space, int N) {
		for (int i = 0; i < N-Space-1; i++) {
			System.out.print(" ");
		}
	}
	
	

}
