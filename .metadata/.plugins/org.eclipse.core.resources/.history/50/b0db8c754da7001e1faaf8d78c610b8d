package No.step4;

import java.util.Scanner;

public class no1546 {

	public static void main(String[] args) {
		// 평균
		// 평균을 조작하는 문제

		// 최댓값 M
		// 모든 점수를 점수/M *100
		
		Scanner scanner = new Scanner(System.in);
		
		int size = scanner.nextInt();
		int[] scores = new int[size];
		int[] fixScores = new int[size];
		
		int maxValue = 0;
		int sum = 0;
		
		for (int i = 0; i < scores.length; i++) {
			scores[i] = scanner.nextInt();
		}
		
		for (int i = 0; i < scores.length; i++) {
			if (maxValue < scores[i])
				maxValue = scores[i];
		}
		
		System.out.println("최대값: "+maxValue);
		
		System.out.println("고치기 전");
		for (int i = 0; i < scores.length; i++) {
			System.out.print(scores[i] + " ");
		}

		System.out.println();
		System.out.println("고친 성적");
		for (int i = 0; i < scores.length; i++) {
			fixScores[i] = scores[i] * 100 / maxValue;
			System.out.print(fixScores[i] + " ");
		}
		
		for (int i = 0; i < scores.length; i++) {
			sum = sum + fixScores[i];
		}
		
		System.out.println();
		System.out.printf("평균: %d", sum/fixScores.length);
	}

}
