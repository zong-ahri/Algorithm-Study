package step8;

import java.util.*;

public class no2745 {

	public static void main(String[] args) {
		// 진법 변환
		// 진법에 대해 배우는 문제
		
		// B진법 수 N을 10진법으로 바꾸기 
		
		Scanner scanner = new Scanner(System.in);
		
		Map<Character, Integer> base = new HashMap<Character, Integer>();
		
		for (int i = 0; i < 36; i++) {
			if (i < 10) {
				base.put((char) (i+48), i);
			} else {
				base.put((char) (i+55), i);
			}
		}
		System.out.println(base);

		String N = scanner.next();
		int B = scanner.nextInt();
		
		
		int sum = 0;
		int value = 0;
		
		for (int i = N.length()-1, j = 0; i > -1; i--, j++) {
			char arrayN = N.charAt(i);
			value = base.get(arrayN);
			System.out.println(j + "번째자리: " + arrayN + ":" + value);
			System.out.println((int)Math.pow(36, j) * value);
			sum += (int)Math.pow(36, j) * value;
			
			
//			for (int k = 0; k < j; k++) {
//				if (k != 0) {
//					value = value * B;
//					sum = sum + value;
//				} else {
//					sum = value;
//				}
//			}
		}
		System.out.println(sum);
	}

}
