package step8;

import java.util.Scanner;

public class no2903 {

	public static void main(String[] args) {
		// 중앙 이동 알고리즘
		// 둘씩 반복해서 나눴을 때 점의 개수를 세는 문제
		
		Scanner scanner = new Scanner(System.in);
		
		int n = scanner.nextInt();
		int sum = 0;
		
		
		for (int i = 0; i < n+1; i++) {
			if (i == 0) {
				sum = 2;
			} else {
				sum = sum + (int)Math.pow(2, i);
			}
		}
		System.out.println(sum);
		
	}

}
